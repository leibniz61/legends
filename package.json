{
  "name": "bookoflegends",
  "private": true,
  "workspaces": ["shared", "server", "client"],
  "scripts": {
    "dev:server": "yarn workspace @bookoflegends/server dev",
    "dev:client": "yarn workspace @bookoflegends/client dev",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "build:shared": "yarn workspace @bookoflegends/shared build",
    "build:server": "yarn workspace @bookoflegends/server build",
    "build:client": "yarn workspace @bookoflegends/client build",
    "build": "yarn build:shared && concurrently \"yarn build:server\" \"yarn build:client\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
